<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register New Account</title>
    <style>
      #errorMessage {color: red;}
    </style>
    <%- include('partials/bootstrap-head.ejs'); %>
</head>
<body>
    <%- include('partials/navbar.ejs', {page: "cast"}) %>

    <form style="margin-left: 25%; margin-right: 25%" action="/users/add" method="POST">

        <div class="form-group">
          <label for="username">Username</label><br>
          <input class="form-control" type="text" id="username" name="username" placeholder="e.g. johndoe"> 
        </div>

        <div class="form-group">
          <label for="firstName">First Name:</label><br>
          <input class="form-control" type="text" id="firstName" name="firstName" placeholder="e.g. john"> 
        </div>

        <div class="form-group">
          <label for="lastName">Last Name:</label><br>
          <input class="form-control" type="text" id="lastName" name="lastName" placeholder="e.g. doe"> 
        </div>

        <div class="form-group">
          <label for="password">Password</label><br>
          <input class="form-control" type="password" id="password" name="password">
        </div>

        <br><br>
        <input type="submit" value="Add" class="btn btn-primary">
        <a href="/cast"><button type="button" class="btn btn-danger">Cancel</button></a>
      </form>
      <%- include('partials/bootstrap-script.ejs'); %>
</body>
</html>